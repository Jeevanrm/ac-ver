pipeline{
    agent any

    stages{
        stage('checkout'){
             agent any
             steps{
                 checkout([$class: 'GitSCM', branches: [[name: '*/main']],
                 userRemoteConfigs: [[url: 'https://github.com/Jeevanrm/jaintpapplications.git']]])
            }
            }
        



         stage('Build'){
            agent {
                   label "slave1"
                   }
            steps{ 
                    sh ''' ls -lrt
                    echo "Hello" 
                '''
            }
            }

         stage('test'){
            agent any

            steps{
                sh ''' ls -lrt
                  cd java-maven-calculator-web-app
                  sudo mvn clean install 
                '''
                       
            }
           
            }
        }
    }

